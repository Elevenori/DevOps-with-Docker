FROM node:14-alpine

WORKDIR /usr/src/app

EXPOSE 5000

ENV REACT_APP_BACKEND_URL=http://localhost:8080/

COPY . . 

RUN apk add --no-cache git && \
	npm install && \
	npm run build && \
	npm install -g serve && \
	apk del git && \
	apt-get purge -y --auto-remove curl && \
	rm -rf /var/lib/apt/lists/*

CMD [ "serve", "-s", "-l", "5000", "build" ]
